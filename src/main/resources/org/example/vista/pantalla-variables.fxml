<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-padding: 20;" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ControladorVariables">

    <HBox alignment="CENTER" style="-fx-padding: 15; -fx-margin-bottom: 10;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Variables" textFill="WHITE" />
    </HBox>

    <Label style="-fx-font-size: 13px;" text="Seleccione las variables que desea incluir." wrapText="true" />

    <ScrollPane fitToWidth="true" stylesheets="@../style/scroll-pane.css" VBox.vgrow="ALWAYS">
        <VBox fx:id="vboxVariables" spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="btnGuardar" onAction="#onGuardar" prefHeight="25.0" prefWidth="110.0" text="Guardar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button fx:id="btnCancelar" onAction="#onCancelar" prefHeight="25.0" prefWidth="110.0" style="-fx-background-color: #3d3a3a;" text="Cancelar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </HBox>
</VBox>
