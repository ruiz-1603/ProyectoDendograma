    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <GridPane fx:id="gridPesos" hgap="10" vgap="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="60.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="40.0"/>
            </columnConstraints>
        </GridPane>
    </ScrollPane>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnGuardar"
                text="Guardar"
                onAction="#onGuardar"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="btnCancelar"
                text="Cancelar"
                onAction="#onCancelar"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </HBox>
</VBox>
