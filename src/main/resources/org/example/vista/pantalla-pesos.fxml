<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.ControladorPesos"
      spacing="15"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <HBox alignment="CENTER" style="-fx-background-color: #FF9800; -fx-padding: 15; -fx-margin-bottom: 10;">
        <Label text="Configuraci칩n de Pesos de Variables"
               textFill="WHITE"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <Label text="Asigne un peso a cada variable. Un valor mayor le da m치s importancia a la variable en el c치lculo de la distancia. Use 1.0 para no aplicar ponderaci칩n."
