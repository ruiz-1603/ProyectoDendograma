<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controlador.ControladorPrincipal"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox>
            <!-- Título -->
            <HBox alignment="CENTER" style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <Label text="Sistema de Dendrograma y Clustering Jerárquico"
                       textFill="WHITE"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            <padding>
                <Insets bottom="10"/>
            </padding>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.25" style="-fx-padding: 0 20 20 20;">
            <items>
                <!-- Panel de Opciones (Izquierda) -->
                <VBox spacing="15">
                    <!-- Sección: Cargar archivo -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
                        <Label text="1. Cargar Datos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Separator/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button fx:id="btnCargarCSV"
                                    text="📂 Cargar CSV"
                                    onAction="#onCargarCSV"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                            <Label fx:id="lblArchivoSeleccionado"
                                   text="Ningún archivo seleccionado"
                                   style="-fx-font-style: italic; -fx-text-fill: #666;"/>
                        </HBox>
                    </VBox>

                    <!-- Sección: Configuración -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
                        <Label text="2. Configuración del Clustering" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Normalización:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbNormalizacion" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="Función de Distancia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbDistancia" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            <Label text="Tipo de Enlace:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbTipoEnlace" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <!-- Número de Clusters -->
                            <Label text="Número de Clusters (k):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <Spinner fx:id="spinnerClusters" prefWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <!-- Distancia Umbral -->
                            <Label text="Distancia Umbral:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtDistanciaUmbral" prefWidth="100" onAction="#onAplicarCorteDistancia" promptText="Ej: 1.25" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        </GridPane>
                        <Separator/>
                        <HBox spacing="10">
                            <Button fx:id="btnConfigurarPesos"
                                    text="⚖️ Configurar Pesos"
                                    onAction="#onConfigurarPesos"
                                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 8 15;"/>
                            <Button fx:id="btnSeleccionarVariables"
                                    text="📊 Seleccionar Variables"
                                    onAction="#onSeleccionarVariables"
                                    style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-padding: 8 15;"/>
                        </HBox>
                    </VBox>

                    <!-- Sección: Ejecución -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
                        <Label text="3. Ejecutar Clustering" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Separator/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button fx:id="btnEjecutar"
                                    text="▶️ Ejecutar Clustering"
                                    onAction="#onEjecutar"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                            <Button fx:id="btnExportarJSON"
                                    text="💾 Exportar JSON"
                                    onAction="#onExportarJSON"
                                    style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                        </HBox>
                        <ProgressBar fx:id="progressBar" prefWidth="Infinity" progress="-1.0"/>
                        <Label fx:id="lblEstado" text="Estado: Listo" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    </VBox>
                </VBox>

                <!-- Panel de Resultados (Derecha) -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                    <Label text="4. Resultados" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Separator/>
                    <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="Gráfico Dendrograma">
                                <ScrollPane>
                                    <Pane fx:id="paneDendrograma"/>
                                </ScrollPane>
                            </Tab>
                            <Tab text="Resultado en Texto">
                                <TextArea fx:id="txtResultado"
                                          editable="false"
                                          wrapText="true"
                                          style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"/>
                            </Tab>
                        </tabs>
                    </TabPane>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
