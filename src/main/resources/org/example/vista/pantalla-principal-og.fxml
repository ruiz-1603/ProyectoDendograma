<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="613.0" prefWidth="330.0" style="-fx-background-color: #2b2b2b;" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ControladorPrincipal">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Text fill="#309742" strokeType="OUTSIDE" strokeWidth="0.0" text="Dendrograma">
                    <font>
                        <Font name="Consolas Bold" size="36.0" />
                    </font>
                </Text>

                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: white; -fx-border-radius: 5; -fx-padding: 10;">
                    <children>
                        <Label text="Cargar CSV" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="16.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnCargarCSV" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onCargarCSV" style="-fx-background-color: #3d3a3a; -fx-border-color: #309742;" text="Cargar archivo">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/folder.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                                <Label fx:id="lblArchivoSeleccionado" text="Ningún archivo seleccionado" textFill="WHITE">
                                    <font>
                                        <Font name="Consolas" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: white; -fx-border-radius: 5; -fx-padding: 10;">
                    <children>
                        <Label text="Clustering" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="16.0" />
                            </font>
                        </Label>
                        <GridPane alignment="CENTER" hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" minWidth="120" />
                                <ColumnConstraints halignment="LEFT" />
                            </columnConstraints>
                            <children>
                                <Label text="Funciones:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <font>
                                        <Font name="Consolas" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbDistancia" prefWidth="127.0" style="-fx-background-color: #3D3A3A; -fx-border-color: #ffffff;" stylesheets="@../style/comboBox.css" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>

                                <Label text="Tipo de enlace:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="Consolas" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cmbTipoEnlace" prefWidth="127.0" style="-fx-background-color: #3D3A3A; -fx-border-color: #ffffff;" stylesheets="@../style/comboBox.css" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>

                                <Label text="Número de clusters:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <font>
                                        <Font name="Consolas" size="12.0" />
                                    </font>
                                </Label>
                                <Spinner fx:id="spinnerClusters" prefWidth="69.0" style="-fx-background-color: #3D3A3A;" stylesheets="@../style/spinner.css" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Spinner>
                            </children>
                        </GridPane>
                        <Button fx:id="btnConfigurarPesos" mnemonicParsing="false" onAction="#onConfigurarPesos" prefWidth="245.0" text="Pesos" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnSeleccionarVariables" mnemonicParsing="false" onAction="#onSeleccionarVariables" prefWidth="245.0" text="Variables" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: white; -fx-border-radius: 5; -fx-padding: 10;">
                    <children>
                        <Label text="Ejecución" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="16.0" />
                            </font>
                        </Label>
                        <Button fx:id="btnEjecutar" mnemonicParsing="false" onAction="#onEjecutar" prefWidth="245.0" text="Ejecutar" textFill="WHITE">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </VBox>
                <Label fx:id="lblEstado" text="Estado: Listo" textFill="WHITE">
                    <font>
                        <Font name="Consolas" size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>