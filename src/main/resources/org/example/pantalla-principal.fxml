<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controlador.ControladorPrincipal"
      spacing="15"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- T铆tulo -->
    <HBox alignment="CENTER" style="-fx-background-color: #2196F3; -fx-padding: 15;">
        <Label text="Sistema de Dendrograma y Clustering Jer谩rquico"
               textFill="WHITE"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Secci贸n: Cargar archivo -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="1. Cargar Datos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Separator/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnCargarCSV"
                    text=" Cargar CSV"
                    onAction="#onCargarCSV"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
            <Label fx:id="lblArchivoSeleccionado"
                   text="Ning煤n archivo seleccionado"
                   style="-fx-font-style: italic; -fx-text-fill: #666;"/>
        </HBox>
    </VBox>

    <!-- Secci贸n: Configuraci贸n -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="2. Configuraci贸n del Clustering" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Separator/>

        <GridPane hgap="15" vgap="10">
            <!-- Normalizaci贸n -->
            <Label text="Normalizaci贸n:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbNormalizacion"
                      prefWidth="200"
                      GridPane.rowIndex="0"
                      GridPane.columnIndex="1"/>

            <!-- Distancia -->
            <Label text="Funci贸n de Distancia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbDistancia"
                      prefWidth="200"
                      GridPane.rowIndex="1"
                      GridPane.columnIndex="1"/>

            <!-- Tipo de Enlace -->
            <Label text="Tipo de Enlace:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbTipoEnlace"
                      prefWidth="200"
                      GridPane.rowIndex="2"
                      GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <!-- Botones de configuraci贸n avanzada -->
        <HBox spacing="10">
            <Button fx:id="btnConfigurarPesos"
                    text="锔 Configurar Pesos"
                    onAction="#onConfigurarPesos"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 8 15;"/>
            <Button fx:id="btnSeleccionarVariables"
                    text=" Seleccionar Variables"
                    onAction="#onSeleccionarVariables"
                    style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-padding: 8 15;"/>
        </HBox>
    </VBox>

    <!-- Secci贸n: Ejecuci贸n -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="3. Ejecutar Clustering" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Separator/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnEjecutar"
                    text="讹 Ejecutar Clustering"
                    onAction="#onEjecutar"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
            <Button fx:id="btnExportarJSON"
                    text=" Exportar JSON"
                    onAction="#onExportarJSON"
                    style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
        </HBox>

        <ProgressBar fx:id="progressBar"
                     prefWidth="Infinity"
                     progress="-1.0"/>
        <Label fx:id="lblEstado"
               text="Estado: Listo"
               style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
    </VBox>

    <!-- Secci贸n: Resultados -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <Label text="4. Resultados" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Separator/>

        <TextArea fx:id="txtResultado"
                  editable="false"
                  wrapText="true"
                  style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"
                  VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>
